<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mozeshajdu.audiotagcollector.view.log.LogView"
            prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="tableView" HBox.hgrow="ALWAYS" maxWidth="Infinity">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn text="Title" fx:id="title" prefWidth="40">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Album" fx:id="album" prefWidth="40">
                <cellValueFactory>
                    <PropertyValueFactory property="album"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Status" fx:id="status" prefWidth="20">
                <cellValueFactory>
                    <PropertyValueFactory property="processingStatus"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</HBox>
